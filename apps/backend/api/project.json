{
  "root": "apps/backend/api",
  "projectType": "application",
  "sourceRoot": "apps/backend/api/src",
  "targets": {
    "serve": {
      "executor": "@ns3/nx-serverless:sls",
      "options": {
        "command": "offline"
      }
    },
    "build": {
      "executor": "@ns3/nx-serverless:sls",
      "outputs": ["apps/backend/api/.serverless", "dist/apps/backend/api"],
      "options": {
        "command": "package"
      }
    },
    "deploy": {
      "executor": "@ns3/nx-serverless:sls",
      "outputs": ["apps/backend/api/.serverless", "dist/apps/backend/api"],
      "options": {
        "command": "deploy"
      }
    },
    "remove": {
      "executor": "@ns3/nx-serverless:sls",
      "options": {
        "command": "remove"
      }
    },
    "sls": {
      "executor": "@ns3/nx-serverless:sls",
      "options": {}
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/backend/api"],
      "options": {
        "jestConfig": "apps/backend/api/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/api/src/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
